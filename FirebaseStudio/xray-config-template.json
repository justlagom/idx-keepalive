{
  "log": {
    "loglevel": "warning"
  },
  "inbounds": [
    {
      "listen": "0.0.0.0", // 监听所有地址，处理外部请求
      "port": "$PORT", // Nginx 外部暴露端口 (shell 脚本会替换为 8080)
      "protocol": "vless",
      "settings": {
        "clients": [
          {
            "id": "$UUID", // shell 脚本会替换为您的 UUID
            "flow": "xtls-rprx-vision",
            "email": "fz75vojn"
          }
        ],
        "decryption": "mlkem768x25519plus.native.600s.-FOjuOsx5U7P0gmVgs_ErqezQYmuQa6s7HQQL3biA0g",
        "encryption": "mlkem768x25519plus.native.0rtt.JtaCe-JndzhO-L7B-rbQU-PETl4WNh5Mw5yQ6oDR6jQ",
        "selectedAuth": "X25519, not Post-Quantum"
      },
      "streamSettings": {
        "network": "xhttp",
        "security": "none",
        "xhttpSettings": {
          "path": "$PATH_VALUE", // Xray 流量路径 (shell 脚本会替换为 /b3a053a4)
          "fallback": {
            "dest": "$FALLBACK_PORT", // 回落目标端口 (shell 脚本会替换为 8880)
            "path": "" // 不设置路径，所有不匹配 $PATH_VALUE 的流量都回落到 Python Web Server
          },
          "host": "",
          "mode": "auto",
          "noSSEHeader": false,
          "scMaxBufferedPosts": 30,
          "scMaxEachPostBytes": "1000000",
          "scStreamUpServerSecs": "20-80",
          "xPaddingBytes": "100-1000"
        }
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom"
    }
  ]
}
